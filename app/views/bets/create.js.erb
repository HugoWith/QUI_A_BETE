function refreshForm(innerHTML) {
    const newBetForm = document.getElementById('new_bet');
    newBetForm.innerHTML = innerHTML;
}

function addbet(betHTML) {
    const bets = document.getElementById('bets');
    bets.insertAdjacentHTML('beforeend', betHTML);
}

<% if @bet.errors.any? %>
refreshForm('<%= j render "bets/form", restaurant: @group, bet: @bet %>');
<% else %>
addbet('<%= j render "bets/show", bet: @bet %>');
refreshForm('<%= j render "bets/form", restaurant: @group, bet: bet.new %>');
<% end %>