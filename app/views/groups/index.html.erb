


<div class="row">
    <div class="col-12 col-md-12 index-group">
        <div class="container-index">
        <h2>Espace Bet</h2>
            <div class="">
                <% @owner_group.each do |group| %>
                    <div class="card-product">
                        <div class= "d-flex justify-content-between">
                            <img <%= cl_image_tag group.photo, height: 300, width: 400, crop: :fill %>
                            <%= link_to group.name, group_path(group), class: 'link'%>
                            <i class="fas fa-cog"></i>
                        </div> 
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>







