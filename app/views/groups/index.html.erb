<div class="row">
  <div class="col-12 col-md-12 index-group">
    <div class="container-index">
      <h2>Tes crews</h2>
      <div class="cards-index mb-4">
        <% @owner_groups.each do |group| %>
        <div class="d-flex card-index-group justify-content-between">
          <div>
            <%= image_tag group.photo, class: 'group-index-image mr-2'%>
          </div>
          <div class= "d-flex flex-column align-items-center justify-content-center">
            <div clas='link-index-group'> <%= link_to group_path(group)  do %>
              <h3 class= "index-group-writing"><%= group.name %></h3>
              <h4 class= "index-group-writing"><%= Bet.count_en_cours(group.bets) %> paris en cours </h4>
            <% end %>
            </div>
            </div>
            <div class= "pr-2 pt-2">
            <%if @groups.include?(group) %>
                <%= link_to icon("far","trash-alt"), group, method: :delete, data: { confirm: 'Sûr sûr?' } %>
            <% end %>
            <%= link_to "", group_usergroup_path(group, @usergroup), method: :delete, class: "fas fa-sign-out-alt" %>
            </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
    <div class="d-flex justify-content-center">
      <%= link_to "Crée ton crew", new_group_path, class:"btn-home" %>
    </div>
