
<body>

  <div class="A-1">
    <h3 class="HZ"><%= @bet.description %></h3>
    <div class="avatarcont">
      <div class="I-1">
        <%= cl_image_tag @bet.creator.pick_photo, crop: :fill, class:"avatar-x"%>
        <br/>
        <%= @bet.creator.nickname %>
      </div>
      <div class="I-2">
        <%= cl_image_tag @bet.beter.pick_photo, crop: :fill, class:"avatar-x"%>
        <br/>
        <%= @bet.beter.nickname %>
      </div>
    </div>


    <div class="A-2">
      <div class="C-2">
        <p><strong>Enjeu: </strong><%= @bet.stake %></p>
      </div>
      <div class="C-3">
        <p><strong>Niveau de confiance: </strong><%= @bet.difficulty %> / 10</p>
      </div>
    </div>

  </div>
<a class="date-A"><strong>Jusqu'au: </strong> 15 Dec 2019</a>
