
<div class="row">
  <div class="col-12 col-md-12 index-group" style="height: 120vh">
    <div class="container-index" style="width: 900px">
      <div class="card-product">
        <div class= "d-flex justify-content-between mb-4">
                        <%#= render "win_wheel" %>
        </div>
      </div>
      <div class="d-flex flex-column justify-content-center align-items-center">
        <h1 class = "mb-4 text-center"><%= @group.name %></h1>
        <%= image_tag @group.photo, class: 'group-index-image', style: "border-radius: 50%"%>
      </div>
       <h3 class = "mb-4 text-center" style="margin-top: 20px">Avec qui tu paries ?</h3>
      <div class="d-flex justify-content-between mb-4" data-controller="tabs">
        <% @group.users.each do |member| %>
          <div class= "new_bet" data-action="click->tabs#showCorrespondingForm" data-id="<%= member.id %>">
            <%= cl_image_tag  member.pick_photo, class: "avatar-xl" %>
            <p class='text-center font-weight-light'><%= member.nickname %></p>
          </div>
          <!-- Modal -->
        <% end %>
      </div>
        <%# <div class="d-flex align-items-center mb-4">
          <h4 class= "p-3 mr-3">Est ce que le pari porte sur un beteur du groupe ?</h4>
        <input type="radio"> %>
        <% @group.users.each do |member| %>
          <div class="bet-form" data-id="<%= member.id %>">
            <div class="form-header d-flex justify-content-center mb-3">
              <%= cl_image_tag  member.pick_photo, class: "avatar-xl mr-4" %>

              <h4 style="margin: auto 0">Cool ! Tu paries avec <%= member.nickname %></h4>
            </div>
            <div class="form-body">
              <%= simple_form_for([ @group, @bet ], remote: false) do |form| %>
                <%= form.input :beter_id, as: :hidden, input_html: { value: member.id } %>
                <%#= form.association :beter, label_method: :nickname, collection: @users, selected: member.id %>
                <%= form.input :description, label: "Ton bet", placeholder: "Alex peut manger plus de 3 Petit Beurre en 1 min" %>
                <div class="d-flex justify-content-start">
                <%= form.association :target, label_method: :nickname, collection: @users, include_blank: true %>
                <%= form.input :stake, label: "Qu'est ce qu'on parie ? 🎁"  %>
                <%= link_to image_tag('wheel.svg', id:"wheelsvg"), '#', id: "wheel_link", data: { toggle: 'modal', target: "#modal" }%>
                <p style="margin: auto 0">Pas d'idée click sur la roue</p>
                </div>
                <div class="d-flex justify-content-start">
                <%= form.input :end_date, label: "Vous avez jusqu'à quand ?" %>
                <%= form.input :difficulty, label: "Ta confiance en la faisabilité du pari ?", collection: 1..10%>
                </div>


            </div>
            <div class="form-footer" style="margin-left: 400px">

              <a href="/groups" class="btn-home" >Retour</a>
              <%= form.button :submit, class: "btn-home webpush-button", value: "Crée ton bet" %>
              <%# <button type="button" class="btn btn-primary">Save changes</button> %>
              <% end %>
            </div>
          </div>
        <% end %>

      <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Roue de l'infortune 🎲</h5>
            </div>
            <div class="modal-body">
            <%= render "win_wheel" %>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn-home" data-dismiss="modal">La roue a parlé</button>
            </div>

          </div>
        </div>
      </div>
    </div>

