<div class="row">
  <div class="col-12 col-md-12 index-group">
    <div class="container-index mt-4">
      <div class="card-product">
        <div class= "d-flex justify-content-between mb-4">
          <%= link_to @group.name, group_path(@group), class: 'btn-home'%>
          <i class="fas fa-cog"></i>
        </div>
      </div>
      <h1 class = "mb-4 text-center">Cr√©e un bet !</h1>
      <h3 class = "mb-4 text-center">Avec qui tu paries ?</h3>
      <div class="d-flex justify-content-between mb-4" data-controller="tabs">
        <% @group.users.each do |member| %>
          <div class= "new_bet" data-action="click->tabs#showCorrespondingForm" data-id="<%= member.id %>">
            <%= cl_image_tag  member.pick_photo, class: "avatar-xl" %>
          </div>
          <!-- Modal -->
        <% end %>
      </div>
        <%# <div class="d-flex align-items-center mb-4">
          <h4 class= "p-3 mr-3">Est ce que le pari porte sur un beteur du groupe ?</h4>
        <input type="radio"> %>
        <% @group.users.each do |member| %>
          <div class="bet-form" data-id="<%= member.id %>">
            <div class="form-header">
              <h5 class="form-title" id="exampleModalLongTitle">Cr√©ation du bet</h5>
              <%= cl_image_tag  member.pick_photo, class: "avatar-xl" %>
            </div>
            <div class="form-body">
              <p>Tu paries avec <%= member.nickname %></p>
              <%= simple_form_for([ @group, @bet ], remote: false) do |form| %>
                <%= form.input :beter_id, as: :hidden, input_html: { value: member.id } %>
                <%#= form.association :beter, label_method: :nickname, collection: @users, selected: member.id %>
                <%= form.input :description, label: "Ton bet", placeholder: "Alex peut manger plus de 3 Petit Beurre en 1 min" %>
                <%= form.input :end_date, label: "Vous avez jusqu'√† quand ?" %>
                <%= form.input :stake, label: "Qu'est ce qu'on parie ? üéÅ" %>
                <%= link_to "Pas d'id√©es go roue de l'infortune", '#', class: "btn-home", data: { toggle: 'modal', target: "#modal#{member.id}" } %>
                <%= form.input :difficulty, label: "Ta confiance en la faisabilit√© du pari ?" %>
            </div>
            <div class="form-footer">
              <button type="button" class="btn-home" data-dismiss="modal">Retour</button>
              <%= form.button :submit, class: "btn-home webpush-button", value: "Cr√©e ton bet           " %>
              <%# <button type="button" class="btn btn-primary">Save changes</button> %>
              <% end %>
            </div>
          </div>

          <!-- Modal -->
          <div class="modal fade" id="modal<%= member.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">Roue de l'infortune</h5>
                </div>
                <div class="modal-body">
                  
                </div>
                <div class="modal-footer">

                </div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
