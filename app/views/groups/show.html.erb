<div class="row" data-controller="hello">
  <div class="col-12 col-md-12 index-group container-index">
    <div class="d-flex justify-content-end recap">
      <button class="btn-home" data-action="click->hello#classement">Voir le classement</button>
      <button class="btn-home" data-action="click->hello#inprogress">Voir les paris en cours</button>
      <span data-action="click->hello#donebet" class="btn-home">Voir les paris terminÃ©s</span>


<!--       <%= link_to "Voir ton classement", class:"button_new"%>
      <%= link_to "Voir les paris en cours", class:"button_new"%>
      <%= link_to "Voir les paris terminÃ©s", class:"button_new"%> -->

      <!-- Button trigger modal -->
      <button type="button" class="btn-home" data-toggle="modal" data-target="#exampleModalCenter">
        Invite des potes
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Invite des potes</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= render 'invite_form' %>
              <button type="button" class="button_new" data-dismiss="modal">Retour</button>
            </div>
<!--             <div class="modal-footer"> -->
<!--               <button type="button" class="btn btn-primary">Save changes</button> -->
<!--             </div> -->
          </div>
        </div>
      </div>

    </div>
    <h2><%= @group.name  %></h2>

    <div data-target="hello.donebet" class="visible">
     <div class="container">
      <% @bets.each do |bet|%>
      <% if bet.end_date < DateTime.now  %>
      <h3>Actuellement <%= @bets.size %> paris terminÃ©s</h3>
      <div class="d-flex justify-content-start card_bet">
        <%=bet.description%>
        <%=bet.end_date%>
        <%=bet.difficulty%>/10
        <%=bet.stake%>
        <div class="d-flex justify-content-start">
          <%= bet.creator.nickname %><%= cl_image_tag bet.creator.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <%= bet.beter.nickname %><%= cl_image_tag bet.beter.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        </div>
      </div>
      <% else %>
      <h3>Tous les paris sont en cours ðŸ”¥</h3>
      <% end %>
      <% end %>
    </div>
  </div>

  <div data-target="hello.inprogress" class="visible">
    <div class="container">
      <div class="cards-show-bet">
       <% @bets.each do |bet|%>
       <% if bet.over == false  %>

       <div class="card-bet-infos justify-content-between">
        <%= image_tag 'Batman.png', class: 'img-group-show'%>
        <div class="avatar-bet ">
          <div class="img-wrap">
            <%= cl_image_tag bet.creator.photo, class: "avatar dropdown-toggle avatar1", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <p class="nickname-img"><%= bet.creator.nickname %></p>
          </div>
          <div class="img-wrap">
            <%= cl_image_tag bet.beter.photo, class: "avatar dropdown-toggle avatar2", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <p class="nickname-img"><%= bet.beter.nickname %></p>
          </div>
        </div>
        <div>
          <p>Le pari: <strong> <%=bet.description%></strong></p>
          <p>Le bel enjeu: <strong>  <%=bet.stake%></strong></p>
        </div>
        <div>
          <p>La deadline: <strong>  <%=bet.end_date%></strong></p>
          <p>La confiance: <strong>  <%=bet.difficulty%>/10</strong></p>
        </div>

        <% else %>
        <% end %>

      </div>
      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <div data-target="hello.classement" class="visible">
    <% @usergroup.each do |usergroup| %>
    <% user = User.find(usergroup.user_id) %>
    <% score = usergroup.score %>
    <div class = "d-flex justify-content-center">
      <%= cl_image_tag user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %><%= user.nickname %>  <p> a <b> <%= score %></b> pts.</p>
    </div>
     <% end %>
  </div>


  <div class="d-flex justify-content-center">
    <%= link_to "CrÃ©es vites ton pari", new_group_bet_path(@group), class:"btn-home" %>
  </div>
</div>

