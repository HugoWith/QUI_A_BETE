      <%= link_to "Voir ton classement", group_path, remote: true, id:'#classement'%>
      <%= link_to "Voir les paris en cours", group_path, remote: true, id:"bet_in_progress" %>
      <%= link_to "Voir les paris terminÃ©s", class:"button_new"%>

      <h3>Welcome back <%= current_user.nickname %></h3>
    </div>

    <div class="container">
      <h2><%= @group.name  %></h2>
      <div class="test">balabalbal</div>
      <h3>Actuellement <%= @bets.size %> paris en cours</h3>
      <% @bets.each do |bet|%>
      <div class="d-flex justify-content-start card_bet">
        <%=bet.description%>
        <%=bet.end_date%>
        <%=bet.difficulty%>/10
        <%=bet.stake%>
        <div class="d-flex justify-content-start">
          <%= bet.creator.nickname %><%= cl_image_tag bet.creator.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <%= bet.beter.nickname %><%= cl_image_tag bet.beter.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        </div>
      </div>
      <% end %>
    </div>


    <button data-action="click->hello#classement">Click</button>
    <div data-target="hello.element" class="visible">
    <% @usergroup.each do |group| %>
      <p>Le score de <%= @user.nickname %> est: <%= group.score %></p>
      <% end %>
    </div>




