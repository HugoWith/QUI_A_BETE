


<div class="row">
    <div class="col-12 col-md-12 index-group">
        <div class="container-index">
        <h2>Espace Bet</h2>
            <div class="">
                <% @owner_group.each do |group| %>
                    <div class="card-product">
                        <div class= "d-flex justify-content-between">
                            <%= cl_image_tag group.photo, height: 300, width: 400, crop: :fill %>
                            <%= link_to group.name, group_path(group), class: 'link'%>
                            <i class="fas fa-cog"></i>
                            <%= link_to icon("far","trash-alt") , group, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </div> 
                    </div>
                <% end %>
            </div>
        </div>
        <div class="d-flex justify-content-center">
        <%= link_to "Cree ton crew", new_group_path, class:"button_new" %>
        </div>
    </div>
</div>







